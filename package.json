{
  "name": "music-player",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run dist && npm run watch & live-server --watch='dist'",
    "watch": "npm run watch:js & npm run watch:scss & npm run watch:html",
    "build": "npm run dist && npm run build:css && npm run build:js",
    "dist": "rm -rf dist && mkdir -p dist/{css,js} && cp -R src/{assets,libs,index.html} dist",
    "postcss": "postcss -u autoprefixer -u css-mqpacker -r dist/css/main.css",
    "scss": "node-sass --source-map-embed src/scss/main.scss dist/css/main.css && npm run postcss",
    "js": "webpack --config src/webpack.config.js",
    "watch:html": "onchange 'src/index.html' -- cp src/index.html dist",
    "watch:scss": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -i -- npm run scss",
    "watch:js": "npm run js -- --devtool inline-source-map --watch",
    "build:css": "npm run scss && csso ./dist/css/main.css ./dist/css/main.css",
    "build:js": "npm run js -- -p"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.8",
    "css-mqpacker": "^5.0.1",
    "csso": "^2.3.1",
    "eslint": "^3.13.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.2.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "webpack": "^1.14.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 2%"
  ]
}
